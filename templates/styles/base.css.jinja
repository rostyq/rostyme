{%set theme = request.cookies.theme %}

{% include "styles/solarized.css" %}

html {
  font-family: "Roboto Mono", "Cascadia Code", "Menlo", "Droid Sans Mono", "Ubuntu Mono", monospace;
  font-size: 18px;
}

body {
  margin: 0;
  font-weight: normal;
}

article {
  text-align: justify;
}

main {
  text-align: center;
  margin: 0 auto;
  width: 80%;
  max-width: 800px;
  padding: 10px;
  font-size: 1.0em;
  line-height: 1.5em;
}

h1 {
  font-size: 1.6em;
  font-weight: bold;
}

h2 {
  font-size: 1.4em;
  font-weight: normal;
}

h3 {
  font-size: 1.2em;
  font-weight: normal;
}

a {
  text-decoration: none;
  color: var(--solarized-blue);
  -webkit-tap-highlight-color: transparent;
}

a:hover {
  color: var(--solarized-cyan);
}

{% macro light_theme() -%}
.dark-theme {
  display: none;
}

h2, h3 {
  color: var(--solarized-base1);
}

body {
  background-color: var(--solarized-base3);
  color: var(--solarized-base01);
}
svg {
  color: var(--solarized-base01);
}

a svg:hover {
  color: var(--solarized-base1);
}
{%- endmacro %}

{% macro dark_theme() -%}
.light-theme {
  display: none;
}

h2, h3 {
  color: var(--solarized-base01);
}

body {
  background-color: var(--solarized-base03);
  color: var(--solarized-base1);
}

svg {
  color: var(--solarized-base1);
}

a svg:hover {
  color: var(--solarized-base01);
}
{%- endmacro %}

{% if theme is undefined %}
  {{ dark_theme() }}

  @media (prefers-color-scheme: light) {
    {{ light_theme() }}
  }
{% elif theme == "light" %}
  {{ light_theme() }}
{% elif theme == "dark" %}
  {{ dark_theme() }}
{% endif %}
