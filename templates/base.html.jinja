<html lang="en">
{%set theme = request.cookies.theme %}
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  {% block meta %}{% endblock %}

  <link rel="icon" href="{{ url_for('static', path='favicon.ico') }}">

  <title>{% block title %}{% endblock %}</title>

  <style>{% include "styles/base.css.jinja" %}</style>

  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-LNNQL6L5RQ"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-LNNQL6L5RQ');
  </script>

  {% block head %}{% endblock %}
</head>
<body>
  {% block body %}{% endblock  %}
</body>
</html>